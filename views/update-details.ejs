<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Internship Details</title>
  <link rel="icon" type="image/png" href="/ssn-logo.png">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/update-details.css" />
</head>
<body>
  <div class="container">
    <div class="card">
      <div class="card-header">
        <h2>Edit Internship Details</h2>
      </div>

      <div class="card-body">
        <form action="/update-details" method="POST">
          <input type="hidden" name="serialNo" value="<%= studentData[0] %>" />
          <input type="hidden" name="registerNumber" value="<%= studentData[1] %>" />

          <div class="form-grid">
            <!-- Row 1 -->
            <div class="form-group">
              <label for="name">Full Name</label>
              <input type="text" id="name" name="name" value="<%= studentData[2] %>" class="form-control readonly" readonly />
            </div>
            <div class="form-group">
              <label for="mobileNo">Mobile Number</label>
              <input type="text" id="mobileNo" name="mobileNo" value="<%= studentData[3] %>" class="form-control" required />
            </div>

            <!-- Row 2 -->
            <div class="form-group">
              <label for="section">Section</label>
              <input type="text" id="section" name="section" value="<%= studentData[4] %>" class="form-control readonly" readonly />
            </div>
            <div class="form-group">
              <label for="internshipObtainedOrNot">Internship Obtained?</label>
              <select id="internshipObtainedOrNot" name="intershipObtainedOrNot" class="form-control" required>
                <option value="Yes" <%= studentData[5] === 'Yes' ? 'selected' : '' %>>Yes</option>
                <option value="No" <%= studentData[5] === 'No' ? 'selected' : '' %>>No</option>
              </select>
            </div>

            <!-- Row 3 -->
            <div class="form-group">
              <label for="title">Internship Title</label>
              <input type="text" id="title" name="title" value="<%= studentData[6] %>" class="form-control" required />
            </div>
            <div class="form-group">
              <label for="period">Duration (Months)</label>
              <input type="text" id="period" name="period" value="<%= studentData[7] %>" class="form-control" required />
            </div>

            <!-- Row 4 -->
            <div class="form-group">
              <label for="startDate">Start Date</label>
              <input type="date" id="startDate" name="startDate" value="<%= studentData[8] %>" class="form-control" required />
            </div>
            <div class="form-group">
              <label for="endDate">End Date</label>
              <input type="date" id="endDate" name="endDate" value="<%= studentData[9] %>" class="form-control" required />
            </div>

            <!-- Row 5 -->
            <div class="form-group">
              <label for="companyName">Company Name</label>
              <input type="text" id="companyName" name="companyName" value="<%= studentData[10] %>" class="form-control readonly" readonly />
            </div>
            <div class="form-group">
              <label for="placementSource">Placement Source</label>
              <input type="text" id="placementSource" name="placementSource" value="<%= studentData[11] %>" class="form-control" required />
            </div>

            <!-- Row 6 -->
            <div class="form-group">
              <label for="stipend">Stipend (Rs)</label>
              <input type="text" id="stipend" name="stipend" value="<%= studentData[12] %>" class="form-control" required />
            </div>
            <div class="form-group">
              <label for="internshipType">Internship Type</label>
              <input type="text" id="internshipType" name="internshipType" value="<%= studentData[13] %>" class="form-control" required />
            </div>

            <!-- Row 7 -->
            <div class="form-group">
              <label for="location">Location</label>
              <input type="text" id="location" name="location" value="<%= studentData[14] %>" class="form-control" required />
            </div>
            <div class="form-group">
              <label for="permissionLetter">Permission Letter Submitted?</label>
              <select id="permissionLetter" name="permissionLetter" class="form-control">
                <option value="Yes" <%= studentData[15] === 'Yes' ? 'selected' : '' %>>Yes</option>
                <option value="No" <%= studentData[15] === 'No' ? 'selected' : '' %>>No</option>
              </select>
            </div>

            <!-- Row 8 -->
            <div class="form-group">
              <label for="completionCertificate">Completion Certificate Submitted?</label>
              <select id="completionCertificate" name="completionCertificate" class="form-control">
                <option value="Yes" <%= studentData[16] === 'Yes' ? 'selected' : '' %>>Yes</option>
                <option value="No" <%= studentData[16] === 'No' ? 'selected' : '' %>>No</option>
              </select>
            </div>
            <div class="form-group">
              <label for="internshipReport">Internship Report Submitted?</label>
              <select id="internshipReport" name="internshipReport" class="form-control">
                <option value="Yes" <%= studentData[17] === 'Yes' ? 'selected' : '' %>>Yes</option>
                <option value="No" <%= studentData[17] === 'No' ? 'selected' : '' %>>No</option>
              </select>
            </div>

            <!-- Row 9 -->
            <div class="form-group">
              <label for="studentFeedback">Student Feedback Submitted?</label>
              <select id="studentFeedback" name="studentFeedback" class="form-control">
                <option value="Yes" <%= studentData[18] === 'Yes' ? 'selected' : '' %>>Yes</option>
                <option value="No" <%= studentData[18] === 'No' ? 'selected' : '' %>>No</option>
              </select>
            </div>
            <div class="form-group">
              <label for="employerFeedback">Employer Feedback Submitted?</label>
              <select id="employerFeedback" name="employerFeedback" class="form-control">
                <option value="Yes" <%= studentData[19] === 'Yes' ? 'selected' : '' %>>Yes</option>
                <option value="No" <%= studentData[19] === 'No' ? 'selected' : '' %>>No</option>
              </select>
            </div>
          </div>

          <div class="actions">
            <a href="/welcome" class="btn btn-secondary">
              <span class="icon">‚Üê</span> Back to Dashboard
            </a>
            <button type="submit" class="btn btn-primary">Update Details</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
