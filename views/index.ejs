<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Internship Details Form</title>
    <link rel="stylesheet" href="/fill-form.css">
    <link rel="icon" type="image/png" href="/ssn-logo.png">
</head>
<body>
    <div class="container">
        <header>Student Internship Details Form</header>
        <form action="/upload" method="POST" enctype="multipart/form-data">
            <div class="fields">
                <!-- Input Fields -->
                <div class="input-group">
                    <label>Register Number</label>
                    <input type="text" name="registerNumber" placeholder="Enter Register Number" required>
                </div>
                <div class="input-group">
                    <label>Name</label>
                    <input type="text" name="name" placeholder="Enter your name" required>
                </div>
                <div class="input-group">
                    <label>Mobile No.</label>
                    <input type="text" name="mobileNo" placeholder="Enter mobile number" required>
                </div>
                <div class="input-group">
                    <label>Section</label>
                    <input type="text" name="section" placeholder="Enter section" required>
                </div>
                <div class="input-group">
                    <label>Obtained Internship</label>
                    <select name="obtainedInternship" required>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                </div>
                <div class="input-group">
                    <label>Title</label>
                    <input type="text" name="title" placeholder="Enter title" required>
                </div>
                <div class="input-group">
                    <label>Period</label>
                    <input type="text" name="period" placeholder="e.g., 2 months" required>
                </div>
                <div class="input-group">
                    <label>Start Date</label>
                    <input type="date" name="startDate" required>
                </div>
                <div class="input-group">
                    <label>End Date</label>
                    <input type="date" name="endDate" required>
                </div>
                <div class="input-group">
                    <label>Company Name</label>
                    <input type="text" name="companyName" placeholder="Enter company name" required>
                </div>
                <div class="input-group">
                    <label>Placement Source</label>
                    <select name="placementSource" required>
                        <option value="Through College">Through College</option>
                        <option value="Self-arranged">Self-arranged</option>
                    </select>
                </div>
                <div class="input-group">
                    <label>Stipend (In Rs.)</label>
                    <input type="text" name="stipend" placeholder="Enter stipend amount">
                </div>
                <div class="input-group">
                    <label>Internship Type</label>
                    <select name="internshipType" required>
                        <option value="Research">Research</option>
                        <option value="Industry">Industry</option>
                    </select>
                </div>
                <div class="input-group">
                    <label>Abroad / India</label>
                    <select name="location" required>
                        <option value="India">India</option>
                        <option value="Abroad">Abroad</option>
                    </select>
                </div>
            </div>

            <!-- Document Upload Section -->
            <div class="document-section">
                <label><strong>Upload Documents</strong></label>

                <div class="input-group">
                    <input type="checkbox" id="uploadPermission" onchange="toggleFileInput(this, 'permissionLetterInput')" />
                    <label for="uploadPermission">I have the Signed Permission Letter / Offer Letter</label>
                    <input type="file" id="permissionLetterInput" name="permissionLetter" style="display: none;" disabled>
                </div>

                <div class="input-group">
                    <input type="checkbox" id="uploadCompletion" onchange="toggleFileInput(this, 'completionCertificateInput')" />
                    <label for="uploadCompletion">I have the Completion Certificate</label>
                    <input type="file" id="completionCertificateInput" name="completionCertificate" style="display: none;" disabled>
                </div>

                <div class="input-group">
                    <input type="checkbox" id="uploadReport" onchange="toggleFileInput(this, 'internshipReportInput')" />
                    <label for="uploadReport">I have the Internship Report</label>
                    <input type="file" id="internshipReportInput" name="internshipReport" style="display: none;" disabled>
                </div>

                <div class="input-group">
                    <input type="checkbox" id="uploadStudentFeedback" onchange="toggleFileInput(this, 'studentFeedbackInput')" />
                    <label for="uploadStudentFeedback">I have the Student Feedback</label>
                    <input type="file" id="studentFeedbackInput" name="studentFeedback" style="display: none;" disabled>
                </div>

                <div class="input-group">
                    <input type="checkbox" id="uploadEmployerFeedback" onchange="toggleFileInput(this, 'employerFeedbackInput')" />
                    <label for="uploadEmployerFeedback">I have the Employer Feedback</label>
                    <input type="file" id="employerFeedbackInput" name="employerFeedback" style="display: none;" disabled>
                </div>
            </div>

            <button type="submit">Submit</button>
        </form>
    </div>

    <script>
        function toggleFileInput(checkbox, inputId) {
            const fileInput = document.getElementById(inputId);
            if (!fileInput) return;

            if (checkbox.checked) {
                fileInput.style.display = "block";
                fileInput.disabled = false;
            } else {
                fileInput.style.display = "none";
                fileInput.disabled = true;
            }
        }
    </script>
</body>
</html>
